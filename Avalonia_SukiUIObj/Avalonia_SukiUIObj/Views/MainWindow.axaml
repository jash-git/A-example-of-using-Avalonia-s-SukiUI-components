<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Avalonia_SukiUIObj.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia_SukiUIObj.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Background="Gray"
        Title="Avalonia_SukiUIObj" Padding="30">

<Window.Styles>
    <Style Selector="TextBox.ForceBlue">
        <Setter Property="Foreground" Value="Red" />
        <Setter Property="CaretBrush" Value="White" />

        <Style Selector="^ /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Blue" />
            <Setter Property="Opacity" Value="1" /> <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style Selector="^:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Blue" />
        </Style>
        <Style Selector="^:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Blue" />
        </Style>
    </Style>

    <Style Selector="TextBox.ForceBlue01">
        <Setter Property="Foreground" Value="Red" />
        <Setter Property="CaretBrush" Value="White" />
        <Setter Property="Background" Value="Blue" />

        <Style Selector="^ /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Blue" />
            <Setter Property="Opacity" Value="1" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="^:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Blue" />
        </Style>
        <Style Selector="^:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="Blue" />
        </Style>
        
        <Style Selector="^:disabled /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="DarkBlue" />
            <Setter Property="Opacity" Value="0.5" />
        </Style>
    </Style>


</Window.Styles>


    <StackPanel Spacing="20">
        
        <TextBlock Text="這是一個標準 Window" FontSize="20" FontWeight="Bold"/>

        <Button x:Name="B1" Classes="Primary" Content="主要按鈕"  Background="Red" BorderBrush="Red" Foreground="Green" Click="B1_Click"/>
        <Button x:Name="B2" Classes="Accent" Content="強調按鈕"  Background="Green" BorderBrush="Green" Foreground="Red" Click="B2_Click" />
        <Button x:Name="B3" Classes="Flat" Content="扁平按鈕"  Background="Pink" Click="B3_Click" />

        <suki:GlassCard Width="300" HorizontalAlignment="Left">
            <StackPanel Spacing="10">
                <TextBlock Text="Suki Glass Card" FontWeight="Bold"/>
                <TextBlock Text="這是在不使用 SukiWindow 的情況下渲染的。" TextWrapping="Wrap"/>
            </StackPanel>
        </suki:GlassCard>

            <CheckBox Content="放大後的選項" RenderTransformOrigin="0.5,0.5">
                <CheckBox.RenderTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </CheckBox.RenderTransform>
            </CheckBox>
            <CheckBox Content="自定義樣式" RenderTransformOrigin="0.5,0.5">
                <CheckBox.RenderTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </CheckBox.RenderTransform>
                <CheckBox.Styles>
                    <Style Selector="CheckBox AccessText">
                        <Setter Property="Foreground" Value="Blue" />
                    </Style>
                    <Style Selector="CheckBox TextBlock">
                        <Setter Property="Foreground" Value="Blue" />
                    </Style>

                    <Style Selector="CheckBox:pointerover AccessText, CheckBox:checked AccessText">
                        <Setter Property="Foreground" Value="Blue" />
                    </Style>

                    <Style Selector="CheckBox">
                        <Style.Resources>
                            <SolidColorBrush x:Key="SukiPrimaryColor">Purple</SolidColorBrush>
                        </Style.Resources>
                    </Style>
                </CheckBox.Styles>
            </CheckBox>

            <TextBox FontSize="20" Background="Blue" Foreground="Red" BorderBrush="Transparent" SelectionBrush="Yellow">
            </TextBox>

            <TextBox Classes="ForceBlue" Text="現在應該是純藍底紅字了" />
            <TextBox Classes="ForceBlue01" Text="現在應該是純藍底紅字了" />
            <Border Background="Blue" 
                    CornerRadius="6" 
                    Padding="0"
                    Width="200" 
                    HorizontalAlignment="Left">
                <TextBox Text="現在絕對是藍底紅字"
                         Foreground="Red"
                         BorderThickness="0"
                         Padding="10,5"
                         Background="Transparent">
                    <TextBox.Styles>
                        <Style Selector="TextBox">
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                        <Style Selector="TextBox /template/ Border#PART_BorderElement">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Style>
                        <Style Selector="TextBox /template/ Border#BgHost">
                            <Setter Property="IsVisible" Value="False" />
                        </Style>
                        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                    </TextBox.Styles>
                </TextBox>
            </Border>
    </StackPanel>

</Window>
